{
  "expo": {
    "name": "Riderr",
    "slug": "riderr",
    "scheme": "riderr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.riderr",
      "config": {
        "googleMapsApiKey": "AIzaSyDJBcxx-l7Rooy5_ti3CbtI3ANs4I0_WZs"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show nearby riders and track deliveries.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to your location to track deliveries in the background.",
        "UIBackgroundModes": ["location", "fetch"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/favicon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourcompany.riderr",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDJBcxx-l7Rooy5_ti3CbtI3ANs4I0_WZs"
        }
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location for delivery tracking."
        }
      ],
      [
        "react-native-maps",
        {
          "iosApiKey": "AIzaSyDJBcxx-l7Rooy5_ti3CbtI3ANs4I0_WZs",
          "androidApiKey": "AIzaSyDJBcxx-l7Rooy5_ti3CbtI3ANs4I0_WZs"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    }
  }
}